<%- model_class = Cart -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

		<div class="container text-center">

			<div class="col-md-5 col-sm-12">
        <div class="bigcart"></div>
        <ul>
          <li class="row list-inline columnCaptions">
            <span>QTY</span>
            <span>ITEM</span>
            <span>Price</span>
          </li>
          <% @cart.cart_items.each do |cart_item| %>
            <li class="row cart-row">
              <span class="quantity">
                <%= link_to inc_cart_item_path(cart_item_id: cart_item.id), class: 'prod-count-mod' do %>
                  <i class="fa fa-plus"></i>
                <% end %>
                <%= cart_item.count %>
                <%= link_to dec_cart_item_path(cart_item_id: cart_item.id), class: 'prod-count-mod' do %>
                  <i class="fa fa-minus"></i>
                <% end %>
              </span>
              <span class="itemName"> <%= link_to cart_item.product.title, view_product_path(id: cart_item.product.id) %> </span>
              <span class="popbtn">
                <%= link_to remove_cart_item_path(cart_item_id: cart_item.id), method: :post do %>
                  <i class="fa fa-trash-o fa-2x"></i>
                <% end %>
              </span>
              <span class="cart-row-price"> <%= currency cart_item.product.price %> </span>
            </li>
          <% end %>
          <li class="row cart-row totals">
            <span class="itemName">Total:</span>
            <span class="price"> <%= currency @cart.total %> </span>
            <span>
              <div class='btn-group'>
                <a class="btn btn-warning btn-order">Order</a>
                <%= link_to "Clear", cart_path,
                  method: :delete,
                  :data => { 
                    :confirm => t(
                      '.confirm', :default => t(
                        "helpers.links.confirm", :default => 'Are you sure?'
                      )
                    )
                  },
                  class: 'btn btn-danger btn-order' %>
              </div>
            </span>
          </li>
        </ul>
			</div>
			
			<div class="col-md-7 col-sm-12 text-left">
        <%= render partial: 'admin_area/orders/form' %>
			</div>

		</div>

		<!-- The popover content -->

		<div id="popover" style="display: none">
			<a href="#"><span class="glyphicon glyphicon-pencil"></span></a>
			<a href="#"><span class="glyphicon glyphicon-remove"></span></a>
		</div>
		
		<!-- JavaScript includes -->

		<script src="http://code.jquery.com/jquery-1.11.0.min.js"></script> 
		<script src="assets/js/bootstrap.min.js"></script>
		<script src="assets/js/customjs.js"></script>
