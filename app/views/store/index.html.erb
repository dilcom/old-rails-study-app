<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="container-fluid">
  <% @products.each do |product| %>
    <div class="col-md-4 col-sm-6 container-fluid">
      <div class="row-fluid">
        <div class="col-xs-12">
          <%= link_to view_product_path(id: product.id) do %>
            <h3> <%= product.title %> </h3>
            <%= fancy_product_tag(product) %>
          <% end %>
        </div>
      </div>
      <div class="row-fluid">
        <div class='col-xs-12'>
          <%= link_to add_product_path(product_id: product.id), method: :post , class: 'btn btn-warning btn-cart' do %>
            <i class="fa fa-shopping-cart"></i> Add to cart 
          <% end %>
          <span class="price"><%= currency product.price %></span>
        </div>
      </div>
    </div>
  <% end %>
</div>