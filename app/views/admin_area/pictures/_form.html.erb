<%= form_for @picture, :html => { :class => "form-horizontal picture" } do |f| %>

    <% if @picture.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @picture.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :product_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :product_id, :class => 'form-control' %>
    </div>
    <%= error_span(@picture[:product_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :image_file_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :image_file_name, :class => 'form-control' %>
    </div>
    <%= error_span(@picture[:image_file_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :image_content_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :image_content_type, :class => 'form-control' %>
    </div>
    <%= error_span(@picture[:image_content_type]) %>
  </div>
  <div class="control-group">
    <%= f.label :image_file_size, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :image_file_size, :class => 'form-control' %>
    </div>
    <%= error_span(@picture[:image_file_size]) %>
  </div>
  <div class="control-group">
    <%= f.label :image_updated_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :image_updated_at, :class => 'form-control' %>
    </div>
    <%= error_span(@picture[:image_updated_at]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            product_pictures_path, :class => 'btn btn-default' %>

<% end %>
